<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Label="UserMacros">
    <VXGI_PATH>..\..\VXGI</VXGI_PATH>
  </PropertyGroup>
  <PropertyGroup>
    <IncludePath>$(VXGI_PATH)\include;$(VXGI_PATH)\examplecode;$(IncludePath)</IncludePath>
    <LibraryPath>$(VXGI_PATH)\lib;$(LibraryPath)</LibraryPath>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <Link>
      <AdditionalDependencies Condition="'$(Platform)'=='Win32'">GFSDK_VXGI_x86.lib;%(AdditionalDependencies)</AdditionalDependencies>
      <AdditionalDependencies Condition="'$(Platform)'=='x64'">GFSDK_VXGI_x64.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
</Project>